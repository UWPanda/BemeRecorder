<Page
    x:Class="BemeRecorder.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BemeRecorder"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black" >
        <Image Source="Assets/Logo.png" Width="200" Height="200" />
        <Grid x:Name="Overlay_Grid" Grid.Row="0" Grid.RowSpan="2" Background="Black" Visibility="Collapsed">
            <TextBlock x:Name="Overlay_RecordingTextBlock" Margin="20,20,0,0" Height="30" VerticalAlignment="Top" Text="Recording..." Foreground="#FF00EB00" FontSize="18.667"/>
        </Grid>
    </Grid>
</Page>
